<!DOCTYPE html>
<html>

<head>
  <title>hostmap - {{ title }}</title>
  <style>
  :root {
  --bg: #ffffff;

  /* pastel colors because sarah insisited ;)*/
  --accent-1: #ffcd9b;  
  --accent-2: #b6d8ff;  
  --accent-3: #b8f2c9;  
  --accent-4: #d7b6ff;  

  --button-bg: var(--accent-4);
  --button-border: rgba(0, 0, 0, 0.1);
}

html.dark-mode {
  filter: invert(1) hue-rotate(180deg);
}

html {
  background-color: var(--bg);
}


body {
  width: fit-content;
  margin: auto;
  background-color: var(--bg);
  font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
    sans-serif;
}


hr {
  border: 1px solid var(--accent-1);
}

th,
td {
  padding: 2px 4px;
}

.mono-font {
  font-family: monospace;
  font-size: 1.2em;
}

h1 {
  margin-right: 1rem;
}

header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(
    in oklab to right,
    var(--accent-4),
    var(--accent-2),
    var(--accent-3),
    var(--accent-1)
  );
  padding: 0.5rem 8px;
  border-bottom: 4px solid var(--accent-1);
}

main,
header {
  margin: 0 8px;
}

p {
  max-width: 700px;
}


tr.host-row:hover {
  background-color: var(--accent-3);
}


thead tr{
  margin:8px;
}

.dark-mode-btn-wrapper {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

#dark-mode-toggle {
  background-color: var(--button-bg);
  border: 1px solid var(--button-border);
  border-radius: 4px;
  padding: 4px 10px;
  cursor: pointer;
  font-size: 0.9rem;
}

#dark-mode-toggle:hover {
  filter: brightness(1.05);
}
  </style>
</head>

<body style="width: fit-content;margin: auto;">
  <header>
    <h1><a href="/">hostmap</a> | {{ title }}</h1>
    <div class='dark-mode-btn-wrapper'>
      <button id="dark-mode-toggle">dark mode</button>
    </div>
  </header>

  {% block content %}{% endblock %}

  <footer style="padding-top: 1em">
    <hr>
    <ul>
      <li><a href="https://github.com/YesSeri/hostmap">hostmap repo</a></li>
    </ul>
  </footer>
</body>
<script>
document.addEventListener("DOMContentLoaded", function () {
  const toggleBtn = document.getElementById("dark-mode-toggle");
  const htmlEl = document.documentElement;

  const saved = localStorage.getItem("dark-mode");
  if (saved === "on") {
    htmlEl.classList.add("dark-mode");
    toggleBtn.textContent = "light mode";
  }

  toggleBtn.addEventListener("click", () => {
    const isDark = htmlEl.classList.toggle("dark-mode");
    localStorage.setItem("dark-mode", isDark ? "on" : "off");
    toggleBtn.textContent = isDark ? "light mode" : "dark mode";
  });
});
</script>

</html>
